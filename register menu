    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here
        try{
        koneksi=new Koneksi1();
        koneksi.koneksiku();
        
        String id,jid,nid,nama,umur,alamat,kelamin,berangkat,jkeb;
        id=txtID.getText().trim();
        jid=txtJID.getText().trim();
        nid=txtNID.getText().trim();
        nama=txtNama.getText().trim();
        umur=txtUmur.getText().trim();
        alamat=txtAlamat.getText().trim();
        kelamin=(rbPria.isSelected())?"Pria":"Wanita";
        berangkat=(rbOnh.isSelected())?"ONH":"ONH Plus";
        jkeb=cbjkeb.getSelectedItem().toString().trim();
        koneksi.st=koneksi.conn.createStatement();
        String sql="insert into peserta values('"+id+"','"
                +jid+"','"
                +nid+"','"
                +nama+"','"
                +umur+"','"
                +alamat+"','"
                +kelamin+"','"
                +berangkat+"','"
                +jkeb+"');";
        koneksi.st.execute(sql);
        koneksi.st.close();
          JOptionPane.showMessageDialog(this,"Data berhasil disimpan");
       }catch (SQLException ex){
            JOptionPane.showMessageDialog(this,"Maaf gagal disimpan"+ ex);
       }
        hapus ();
    }                                        

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
         hapus ();
    }                                        

